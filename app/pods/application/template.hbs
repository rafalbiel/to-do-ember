{{page-title 'ToDo'}}

<form class='row g-3' {{on 'submit' this.addNewTask}}>
  <div class='col-auto'>
    <label for='inputPassword2' class='visually-hidden'>Password</label>
    <input
      type='text'
      class='form-control'
      id='inputPassword2'
      placeholder='Add new task'
      {{on 'input' this.onInputValue}}
    />
  </div>
  <div class='col-auto'>
    <button type='submit' class='btn btn-primary mb-3'>Confirm identity</button>
  </div>
</form>

<List @items={{this.items}} />

{{outlet}}