<li class='list-group-item'>
  <input
    class='form-check-input me-1'
    type='checkbox'
    value=''
    checked={{@item.isDone}}
    id='secondCheckbox'
    {{on 'change' this.onToggleIsDone}}
  />
  <label
    class='form-check-label'
    for='secondCheckbox'
  >{{@item.description}}</label>
  <button
    type='button'
    class='btn btn-danger'
    {{on 'click' this.onRemoveTask}}
  >Remove</button>
</li>